	<div class="outer">
		<div id="footer-info">
			<div class="footer-left">
				<% if (theme.wbd){ %>
				&copy; <%= theme.wbd.y %>-<%= date(new Date(), 'YYYY') %> <%= config.author || config.title %>
				<% } else { %>
				&copy; <%= date(new Date(), 'YYYY') %> <%= config.author || config.title %>
				<% } %>
				<% if (theme.beian){ %>
				<br><a href="http://beian.miit.gov.cn/" target="_blank"><%= theme.beian %></a>
				<% } %>
			</div>
			<div class="footer-right">
				<% if (theme.upyun){ %>
				<a href="https://console.upyun.com/register/?invite=B1Tr4zsVf" target="_blank"> &nbsp; <img
						src="<%= theme.upyun %>" width="100"></a>
				<% } %>
